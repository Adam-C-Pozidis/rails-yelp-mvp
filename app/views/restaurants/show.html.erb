<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>
<h2> <%= @restaurant.name %> </h2>
<h3><%= @restaurant.category %></h3>
<% @restaurant.reviews.each do |review| %>
  <p> <%= review.content %></p>
  <p> <%= review.rating %></p>
<% end %>
<p><%= link_to "back to all", restaurants_path, class: "btn btn-primary"%></p>
<%= link_to "write a review", new_restaurant_review_path(@restaurant) %>
