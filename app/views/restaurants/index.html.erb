<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>

<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.name %></h2>
  <h3><%= restaurant.address %></h3>
  <p><%= link_to "write a review", new_restaurant_review_path(restaurant), class: "btn btn-primary" %>
<%= link_to "details", restaurant_path(restaurant), class: "btn btn-primary"%></p>
<% end %>

<p><%= link_to "create a restaurant", new_restaurant_path(@restaurant), class: "btn btn-primary"%></p>
