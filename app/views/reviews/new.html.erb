<h1>Reviews#show</h1>
<p>Find me in app/views/reviews/show.html.erb</p>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
<p><%= link_to "back to all", restaurants_path, class: "btn btn-primary"%></p>
